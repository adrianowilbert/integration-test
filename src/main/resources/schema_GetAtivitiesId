    "title": "The Root Schema",
    "required": [
        "ID",
        "Title",
        "DueDate",
        "Completed"
    ],
    "properties": {
        "ID": {
            "$id": "#/properties/ID",
            "type": "integer",
            "title": "The Id Schema",
            "default": 0,
            "examples": [
                30
            ]
        },
        "Title": {
            "$id": "#/properties/Title",
            "type": "string",
            "title": "The Title Schema",
            "default": "",
            "examples": [
                "Activity 30"
            ],
            "pattern": "^(.*)$"
        },
        "DueDate": {
            "$id": "#/properties/DueDate",
            "type": "string",
            "title": "The Duedate Schema",
            "default": "",
            "examples": [
                "2019-10-09T18:25:09.8394704+00:00"
            ],
            "pattern": "^(.*)$"
        },
        "Completed": {
            "$id": "#/properties/Completed",
            "type": "boolean",
            "title": "The Completed Schema",
            "default": false,
            "examples": [
                true
            ]
        }
    }
